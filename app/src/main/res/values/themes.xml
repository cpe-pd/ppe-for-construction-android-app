<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZMCI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorText</item>
    </style>

    <style name="Theme.ZMCI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZMCI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZMCI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeBrowser" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="ThemeCameraStream" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="ThemeDetection" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/lime_dark</item>
        <item name="colorAccent">@color/lime</item>
    </style>

    <style name="ThemeHistory" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="ThemeAbout" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ThemeMap" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/darkblue_dark</item>
        <item name="colorAccent">@color/darkblue</item>
    </style>

    <style name="ThemeWeather" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/darkviolet</item>
        <item name="colorPrimaryDark">@color/darkviolet_dark</item>
        <item name="colorAccent">@color/darkviolet</item>
    </style>

    <style name="ThemeSettings" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet_dark</item>
        <item name="colorAccent">@color/violet</item>
    </style>
</resources>